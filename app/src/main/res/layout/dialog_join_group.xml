<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="#1E293B"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Join Group"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" 
            android:fontFamily="@font/kanitbold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#334155"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="âœ•"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" 
            android:fontFamily="@font/kanitsemibold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Decorative Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#6366F1"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ðŸ”—"
                android:textSize="40sp" 
            android:fontFamily="@font/kanitregular" />
        </androidx.cardview.widget.CardView>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Enter the 6-character code"
            android:textAlignment="center"
            android:textColor="#94A3B8"
            android:textSize="14sp" 
            android:fontFamily="@font/kanitmedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="shared by your group admin"
            android:textAlignment="center"
            android:textColor="#94A3B8"
            android:textSize="14sp" 
            android:fontFamily="@font/kanitmedium" />

        <!-- Invite Code -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Group Code"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilInviteCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxBackgroundColor="#0F172A"
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:boxStrokeWidth="0dp"
            app:errorTextColor="#EF4444"
            app:hintTextColor="#64748B">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInviteCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:hint="e.g., ABC123"
                android:inputType="textCapCharacters"
                android:letterSpacing="0.2"
                android:maxLength="6"
                android:padding="20dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textColorHint="#64748B"
                android:textSize="20sp"
                android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#0F172A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡"
                    android:textSize="20sp" 
            android:fontFamily="@font/kanitsemibold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:text="Ask the group creator to share the invite code with you"
                    android:textColor="#94A3B8"
                    android:textSize="13sp" 
            android:fontFamily="@font/kanitregular" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Join Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnJoinGroup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="#6366F1"
            android:text="Join Group"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
