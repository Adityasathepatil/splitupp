<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="←"
                android:textColor="@android:color/white"
                android:textSize="20sp" 
            android:fontFamily="@font/kanitsemibold" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Settle Up"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" 
            android:fontFamily="@font/kanitbold" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Select Group -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Group"
                android:textColor="@android:color/white"
                android:textSize="16sp" 
            android:fontFamily="@font/kanitmedium" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSelectGroup"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:text="Select a group"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp" 
            android:fontFamily="@font/kanitmedium" />

            <!-- Settlement Summary -->
            <TextView
                android:id="@+id/tvSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Who owes whom?"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                 android:fontFamily="@font/kanitsemibold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSettlements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"
                android:visibility="gone" />

            <!-- Settle Up Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSettleUp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:background="#10B981"
                android:text="Mark as Settled"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                 android:fontFamily="@font/kanitsemibold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
