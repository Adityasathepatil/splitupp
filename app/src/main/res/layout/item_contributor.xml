<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="12dp">

    <!-- Rank Badge -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRank"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F59E0B">

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/kanitbold" />
    </androidx.cardview.widget.CardView>

    <!-- User Avatar -->
    <androidx.cardview.widget.CardView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#6366F1">

        <TextView
            android:id="@+id/tvUserInitial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="U"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kanitbold" />
    </androidx.cardview.widget.CardView>

    <!-- User Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/kanitsemibold" />

        <TextView
            android:id="@+id/tvExpenseCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="0 expenses"
            android:textColor="#64748B"
            android:textSize="12sp"
            android:fontFamily="@font/kanitregular" />
    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹0"
        android:textColor="#3B82F6"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/kanitbold" />
</LinearLayout>
