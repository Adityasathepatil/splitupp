<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="22dp"
            android:paddingTop="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi Alex ðŸ‘‹"
                        android:textColor="@android:color/white"
                        android:textSize="34sp"
                        android:letterSpacing="0.01"
                        android:textStyle="bold"
                        android:fontFamily="@font/kanitbold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Here's your balance overview"
                        android:textColor="#94A3B8"
                        android:textSize="15sp"
                        android:letterSpacing="0.02"
                        android:fontFamily="@font/kanitmedium" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardBackgroundColor="#6366F1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="8dp">

                    <TextView
                        android:id="@+id/tvUserInitial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@android:color/white"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/kanitbold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Balance Card with Gradient Effect -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Net Balance - Featured at Top -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_card_background"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="28dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NET BALANCE"
                            android:textColor="#CBD5E1"
                            android:textSize="14sp"
                            android:letterSpacing="0.15"
                            android:fontFamily="@font/kanitsemibold" />

                        <TextView
                            android:id="@+id/tvNetBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="â‚¹00.00"
                            android:textColor="@android:color/white"
                            android:textSize="48sp"
                            android:letterSpacing="0.02"
                            android:textStyle="bold"
                            android:fontFamily="@font/kanitbold" />
                    </LinearLayout>

                    <!-- Divider with Dots -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="24dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:background="#2D3748" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="@drawable/dot_indicator" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"
                            android:background="#2D3748" />
                    </LinearLayout>

                    <!-- Owed and Owe Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- You Are Owed -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/balance_card_left"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â†‘ YOU GET BACK"
                                android:textColor="#94A3B8"
                                android:textSize="11sp"
                                android:letterSpacing="0.08"
                                android:fontFamily="@font/kanitsemibold" />

                            <TextView
                                android:id="@+id/tvAmountOwed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="â‚¹00.00"
                                android:textColor="#10B981"
                                android:textSize="24sp"
                                android:letterSpacing="0.01"
                                android:textStyle="bold"
                                android:fontFamily="@font/kanitbold" />
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="12dp"
                            android:background="#2D3748" />

                        <!-- You Owe -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/balance_card_right"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â†“ YOU OWE"
                                android:textColor="#94A3B8"
                                android:textSize="11sp"
                                android:letterSpacing="0.08"
                                android:fontFamily="@font/kanitsemibold" />

                            <TextView
                                android:id="@+id/tvAmountOwe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="â‚¹00.00"
                                android:textColor="#EF4444"
                                android:textSize="24sp"
                                android:letterSpacing="0.01"
                                android:textStyle="bold"
                                android:fontFamily="@font/kanitbold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- AdMob Banner Ad -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adViewHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:adSize="BANNER"
                    app:adUnitId="ca-app-pub-5829896408548217/3366523889"/>
            </androidx.cardview.widget.CardView>

            <!-- Quick Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:letterSpacing="0.01"
                    android:textStyle="bold"
                    android:fontFamily="@font/kanitsemibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Manage your expenses"
                    android:textColor="#64748B"
                    android:textSize="14sp"
                    android:letterSpacing="0.02"
                    android:fontFamily="@font/kanitmedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAddExpense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="28dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            app:cardBackgroundColor="#3B82F6"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="â‚¹"
                                android:textColor="@android:color/white"
                                android:textSize="34sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/kanitbold" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Add"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:letterSpacing="0.02"
                            android:fontFamily="@font/kanitsemibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Expense"
                            android:textColor="#94A3B8"
                            android:textSize="13sp"
                            android:fontFamily="@font/kanitmedium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCreateGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="28dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            app:cardBackgroundColor="#8B5CF6"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="@android:color/white"
                                android:textSize="38sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/kanitbold" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Create"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:letterSpacing="0.02"
                            android:fontFamily="@font/kanitsemibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Group"
                            android:textColor="#94A3B8"
                            android:textSize="13sp"
                            android:fontFamily="@font/kanitmedium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSettleUp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#1E293B"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="28dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            app:cardBackgroundColor="#10B981"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="âœ“"
                                android:textColor="@android:color/white"
                                android:textSize="34sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/kanitbold" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Settle"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:letterSpacing="0.02"
                            android:fontFamily="@font/kanitsemibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Up"
                            android:textColor="#94A3B8"
                            android:textSize="13sp"
                            android:fontFamily="@font/kanitmedium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Your Groups Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Groups"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:letterSpacing="0.01"
                        android:textStyle="bold"
                        android:fontFamily="@font/kanitsemibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Recent activity"
                        android:textColor="#64748B"
                        android:textSize="14sp"
                        android:letterSpacing="0.02"
                        android:fontFamily="@font/kanitmedium" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#334155"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/tvViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="12dp"
                        android:text="View All"
                        android:textColor="#E2E8F0"
                        android:textSize="14sp"
                        android:letterSpacing="0.02"
                        android:fontFamily="@font/kanitsemibold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>