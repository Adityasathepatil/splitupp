<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="â†"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" 
            android:fontFamily="@font/kanitsemibold" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="Group Name"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" 
            android:fontFamily="@font/kanitbold" />
        </LinearLayout>

        <!-- Group Code Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Code"
                    android:textColor="#94A3B8"
                    android:textSize="14sp" 
            android:fontFamily="@font/kanitmedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvGroupCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:letterSpacing="0.2"
                        android:text="ABC123"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" 
            android:fontFamily="@font/kanitbold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnCopyCode"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="#6366F1"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="ðŸ“‹"
                            android:textSize="18sp" 
            android:fontFamily="@font/kanitsemibold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Members Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Members"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="12dp" />
        </androidx.cardview.widget.CardView>

        <!-- Expenses Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Expenses"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />

            <TextView
                android:id="@+id/tvTotalExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: â‚¹0.00"
                android:textColor="#6366F1"
                android:textSize="16sp"
                android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/tvNoExpenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="No expenses yet"
            android:textColor="#64748B"
            android:textSize="16sp"
             android:fontFamily="@font/kanitmedium" />

        <!-- Balance Summary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Your Balance in this Group"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#1E293B"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You are owed"
                        android:textColor="#94A3B8"
                        android:textSize="13sp" 
            android:fontFamily="@font/kanitregular" />

                    <TextView
                        android:id="@+id/tvYouAreOwed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="â‚¹0.00"
                        android:textColor="#10B981"
                        android:textSize="20sp"
                        android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:background="#334155" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You owe"
                        android:textColor="#94A3B8"
                        android:textSize="13sp" 
            android:fontFamily="@font/kanitregular" />

                    <TextView
                        android:id="@+id/tvYouOwe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="â‚¹0.00"
                        android:textColor="#EF4444"
                        android:textSize="20sp"
                        android:textStyle="bold" 
            android:fontFamily="@font/kanitsemibold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
