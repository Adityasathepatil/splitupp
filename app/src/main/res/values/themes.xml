<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Splitup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#5B6EF5</item>
        <item name="colorPrimaryDark">#1A202C</item>
        <item name="colorAccent">#8B5CF6</item>
        <item name="android:statusBarColor">#1A202C</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimaryVariant">#1A202C</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#8B5CF6</item>
        <item name="colorSecondaryVariant">#6366F1</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:windowBackground">#0F172A</item>
        <item name="colorSurface">#1E293B</item>
        <item name="colorOnSurface">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/profile_avatar_bg</item>
        <item name="colorAccent">@color/profile_avatar_bg</item>
        <item name="android:background">@color/profile_card_bg</item>
        <item name="android:textColorPrimary">@color/profile_text_primary</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/profile_text_secondary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/profile_logout_text</item>
    </style>
</resources>